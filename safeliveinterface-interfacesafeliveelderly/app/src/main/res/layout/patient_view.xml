<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="10dp">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <evolveconference.safelive.ui.view.RoundImageView
            android:id="@+id/person_photo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:src="@drawable/old1"/>

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingRight="5dp"
            android:text="Emilia"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/patient_blood_pressure"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/banner_orange"
            android:gravity="center"/>

        <TextView
            android:id="@+id/patient_oximetry"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_button"
            android:gravity="center"/>


        <TextView
            android:id="@+id/patient_temperature"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_button"
            android:gravity="center"/>


    </TableRow>

</android.support.v7.widget.CardView>