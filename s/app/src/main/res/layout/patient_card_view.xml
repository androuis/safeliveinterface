<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp">

    <ImageView
        android:id="@+id/patient_avatar"
        android:layout_width="@dimen/picture_size"
        android:layout_height="@dimen/picture_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_empty_placeholder" />

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/patient_avatar"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/black_color_transparent"/>

    <TextView
        android:id="@+id/patient_alert_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/patient_avatar"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_red" />

    <TextView
        android:id="@+id/patient_warning_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/patient_avatar"
        android:layout_below="@id/patient_alert_count"
        android:gravity="center"
        android:background="@drawable/circle_yellow" />

</RelativeLayout>
